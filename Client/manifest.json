{
  "manifest_version": 3,
  "name": "Prompt Enhancer for ChatGPT",
  "version": "0.1.0",
  "description": "Automatically enhances prompts typed into ChatGPT.",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/logo-24.png"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ]
}
